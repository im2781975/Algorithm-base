/*0->1 2 
1->2 4 
2->2 8 
3->1 7 2 3  */
#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n=4,i,j;
    vector<pair<int,int>>adj_list[n];
    adj_list[0]={{1,2}};
    adj_list[1]={{2,4}};
    adj_list[2]={{2,8}};
    adj_list[3]={{1,7},{2,3}};
    /*adj_list[0].push_back({1,2});
    adj_list[1].push_back({2,4});
    adj_list[2].push_back({2,8});
    adj_list[3].push_back({1,7});*/
    for(i=0;i<n;i++)
    {
        cout<<i<<"->";
        for(j=0;j<adj_list[i].size();j++)
        cout<<adj_list[i][j].first<<" "<<adj_list[i][j].second<<" ";
        
        cout<<"\n";
    }
}
