Implement Heap-Sort using the Min-Heap.
#include <iostream>
#include <vector>

// Function to heapify a subtree rooted at node i.
void minHeapify(std::vector<int> &arr, int n, int i) {
    int smallest = i;  // Initialize the root as the smallest element
    int left = 2 * i + 1;  // Left child
    int right = 2 * i + 2; // Right child

    // If the left child is smaller than the root
    if (left < n && arr[left] < arr[smallest])
        smallest = left;

    // If the right child is smaller than the current smallest
    if (right < n && arr[right] < arr[smallest])
        smallest = right;

    // If the smallest is not the root
    if (smallest != i) {
        std::swap(arr[i], arr[smallest]);

        // Recursively heapify the affected sub-tree
        minHeapify(arr, n, smallest);
    }
}

// Main function to perform heap sort
void heapSort(std::vector<int> &arr) {
    int n = arr.size();

    // Build a min-heap
    for (int i = n / 2 - 1; i >= 0; i--)
        minHeapify(arr, n, i);

    // Extract elements one by one from the heap
    for (int i = n - 1; i > 0; i--) {
        // Move the current root to the end
        std::swap(arr[0], arr[i]);

        // Call minHeapify on the reduced heap
        minHeapify(arr, i, 0);
    }
}

int main() {
    std::vector<int> arr = {12, 11, 13, 5, 6, 7};

    std::cout << "Original array: ";
    for (int num : arr) {
        std::cout << num << " ";
    }

    heapSort(arr);

    std::cout << "\nSorted array: ";
    for (int num : arr) {
        std::cout << num << " ";
    }

    return 0;
}
