#include<bits/stdc++.h>
using namespace std;
class Queue
{
    int *ar;
    int start,end;
    int size,cur_size;
    public:
    Queue(int size)
    {
        ar=new int[size];
        start=0;end=-1;
        cur_size=0;
        this->size=size;
    }
    void ENQUEUE(int val)
    {
        if(cur_size==size)
        {
            cout<<"Queue is full"<<"\n";
            return;
        }
        end++;
        end=end%size;
        ar[end]=val;
        cur_size++;
    }
    void DEQUEUE()
    {
        if(cur_size==0)
        {
        cout<<"queue is empty";
        return;
        }
        start++;
        start=start%size;
        cur_size--;
    }
    int get_size()
    {
        return cur_size;
    }
    int Front()
    {
        if(cur_size==0)
        return -1;
        
        return ar[start];
    }
};
int main()
{
    Queue q(5);
    q.ENQUEUE(8);
    q.ENQUEUE(7);
    q.ENQUEUE(6);
    //q.DEQUEUE();
    cout<<q.Front()<<"\n";
    cout<<q.get_size();
}
