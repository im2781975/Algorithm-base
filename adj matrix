#include<bits/stdc++.h>
using namespace std;
int main()
{
    int i,j,n=4;
    int matrix[n][n]={};
    /*for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        matrix[i][j]=0;
    }*/
    matrix[0][1]=1;
    matrix[1][0]=1;
    matrix[1][2]=1;
    matrix[2][1]=1;
    matrix[3][2]=1;
    matrix[2][3]=1;
    matrix[3][1]=1;
    matrix[1][3]=1;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {cout<< matrix[i][j]<<" ";}
        
        cout<<"\n";
    }
}
